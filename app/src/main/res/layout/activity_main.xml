<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/add_event_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="15dp"
        android:hint="新增名稱"
        android:inputType="text"
        android:singleLine="true"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="選取時段"
        android:textSize="25dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/add_event_beginTime"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="begin"
            android:backgroundTint="@color/teal_200"
            android:layout_gravity="center"
            android:onClick="popBeginTime"/>
        <Button
            android:id="@+id/add_event_endTime"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="End"
            android:layout_marginLeft="70dp"
            android:backgroundTint="@color/purple_200"
            android:layout_gravity="center"
            android:onClick="popEndTime"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/add_event_chooseColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_color_lens_24"
        app:iconTint="@color/black"
        android:hint="Choose color"
        android:textSize="25dp"
        android:text=""
        android:gravity="center"
        app:iconGravity="textStart"
        android:textColor="@color/white"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/add_event_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/light_gray"
        android:text=""
        android:hint="提醒"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_baseline_notifications_none_24"
        app:iconGravity="textStart"
        android:layout_marginTop="10dp"
        android:clickable="true"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="選取日期"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/add_event_pickdate"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="pick date"
        android:layout_gravity="center"
        android:backgroundTint="@color/teal_200"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="新增備註"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/add_event_remark"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="top"
        android:maxLines="3"
        android:scrollbars="vertical"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_event_secure"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="確定"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_baseline_add_24"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/teal_200"/>



</LinearLayout>